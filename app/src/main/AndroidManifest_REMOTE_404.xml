<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.subway">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Subway">
        <activity
            android:name=".TripHistory"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".Splash"
            android:exported="true"
            android:theme="@style/Theme.Splash"></activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"></activity>
        <activity
            android:name=".Onboarding"
            android:exported="true"
            android:theme="@style/Theme.Onboarding"></activity>
        <activity
            android:name=".StartupScreen"
            android:exported="true"
            android:theme="@style/Theme.Onboarding"></activity>
        <activity
            android:name=".Login"
            android:exported="true"
            android:theme="@style/Theme.LoginNadRegistration">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Registration"
            android:exported="true"
            android:theme="@style/Theme.LoginNadRegistration"></activity>
        <activity
            android:name=".ResetPasswordRequest"
            android:exported="true"
            android:theme="@style/Theme.LoginNadRegistration"></activity>
        <activity
            android:name=".ResetPassword"
            android:exported="true"
            android:theme="@style/Theme.LoginNadRegistration"></activity>
    </application>

</manifest>